# =============================================================================
# CONFIGURACIÓN DE GOOGLE CLOUD
# =============================================================================

# Google Cloud Storage
GCS_BUCKET_NAME=drcecim-chatbot-storage
GCS_CREDENTIALS_PATH=path/to/your/credentials.json

# Google Cloud Functions
GCF_REGION=us-central1
GCF_PROJECT_ID=your-project-id

# =============================================================================
# CONFIGURACIÓN DE OPENAI
# =============================================================================

# API Keys y Modelos
OPENAI_API_KEY=
PRIMARY_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-4.1-nano
EMBEDDING_MODEL=text-embedding-3-small

# Parámetros de generación
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
MAX_OUTPUT_TOKENS=300
API_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE RAG
# =============================================================================

# Parámetros de RAG
RAG_NUM_CHUNKS=3
SIMILARITY_THRESHOLD=0.3

# Configuración de chunking
CHUNK_SIZE=250
CHUNK_OVERLAP=50

# =============================================================================
# CONFIGURACIÓN DE PROCESAMIENTO
# =============================================================================

# Directorio temporal para procesamiento
TEMP_DIR=/tmp/drcecim_processing
PROCESSED_DIR=data/processed
EMBEDDINGS_DIR=data/embeddings

# Configuración del dispositivo (auto, cuda, cpu, mps)
DEVICE=cpu

# Configuración del servidor
HOST=0.0.0.0
PORT=8080

# =============================================================================
# CONFIGURACIÓN DE STREAMLIT
# =============================================================================

# Configuración de la aplicación Streamlit
STREAMLIT_TITLE=DrCecim - Carga de Documentos
STREAMLIT_DESCRIPTION=Sistema de carga y procesamiento de documentos PDF para el chatbot DrCecim

# Límites de archivo
MAX_FILE_SIZE_MB=50

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Configuración de monitoreo y alertas
ENABLE_MONITORING=True
MONITORING_INTERVAL=60

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Modo de desarrollo
DEBUG=False
ENVIRONMENT=development 