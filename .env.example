# =============================================================================
# CONFIGURACIÓN PARA DRCECIM UPLOAD - SISTEMA DE PROCESAMIENTO DE DOCUMENTOS
# =============================================================================

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================

# Google Cloud Storage
GCS_BUCKET_NAME=tu-bucket-de-storage

# Google Cloud Functions
GCF_REGION=us-central1
GCF_PROJECT_ID=tu-project-id

# OPCIONAL: Solo para desarrollo local. En producción usar cuenta de servicio.
# GCS_CREDENTIALS_PATH=ruta/a/tu/service-account-key.json

# =============================================================================
# OPENAI API
# =============================================================================

# API Key (REQUERIDO)
OPENAI_API_KEY=tu-openai-api-key

# Modelo de embeddings
EMBEDDING_MODEL=text-embedding-3-small

# Timeout para llamadas a la API (segundos)
API_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE PROCESAMIENTO
# =============================================================================

# Parámetros de chunking
CHUNK_SIZE=250
CHUNK_OVERLAP=50

# Configuración del dispositivo
DEVICE=cpu

# Directorios de trabajo (se crean automáticamente)
TEMP_DIR=/tmp/drcecim_processing
PROCESSED_DIR=data/processed
EMBEDDINGS_DIR=data/embeddings

# =============================================================================
# CONFIGURACIÓN DE STREAMLIT APP
# =============================================================================

# Información de la aplicación
STREAMLIT_TITLE=DrCecim - Carga de Documentos
STREAMLIT_DESCRIPTION=Sistema de carga y procesamiento de documentos PDF para el chatbot DrCecim

# Límites de archivos
MAX_FILE_SIZE_MB=50

# =============================================================================
# CONFIGURACIÓN DE SERVIDOR
# =============================================================================

# Puerto para desarrollo local
HOST=0.0.0.0
PORT=8080

# =============================================================================
# CONFIGURACIÓN DE LOGGING Y MONITOREO
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Formato de logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoreo
ENABLE_MONITORING=True
MONITORING_INTERVAL=60

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Modo debug (True/False)
DEBUG=False

# Entorno (development/production)
ENVIRONMENT=development
